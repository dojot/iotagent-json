{
  "mqtt": {
    "host": "mqtt",
    "port" : 1883,
    "protocolId": "MQIsdp",
    "protocolVersion": 3,
    "secure": false,
    "tls": {
      "key": "client-key.pem",
      "cert": "client-cert.pem",
      "ca": [ "server-cert.pem" ],
      "version": "TLSv1_2_method"
    }
  },
  "broker": {
    "host": "zookeeper:2181",
    "type": "kafka",
    "kafka": {
      "autoCommit": true,
      "fetchMaxWaitMs" : 1000,
      "fetchMaxBytes" : 1048576,
      "groupId" : "iotagent",
      "deviceNotificationTopic": [
        { "topic": "dojot.device-manager.device" }
      ]
    }
  },
  "device_manager": {
    "host": "device-manager:5000"
  }
}
